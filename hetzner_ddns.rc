#!/bin/sh
#
# $FreeBSD$

# PROVIDE: hetzner_ddns
# REQUIRE: LOGIN

. /etc/rc.subr

name=hetzner_ddns
rcvar="${name}_enable" 
pidfile="/var/run/${name}.pid"
start_cmd="${name}_start"
load_rc_config $name
command="/usr/sbin/daemon"
command_args="-c -f -P ${pidfile} -r /usr/local/bin/${name}"

hetzner_ddns_start()
{
    export PATH="$PATH:/usr/local/bin"
    eval "${command} ${command_args}"
}

run_rc_command "$1"
